<form action="/boards/<%=@board.id%>" method="POST">
  Title: <input type="text" name="title" value="<%= @board.title%>" class="form-control"/><br /><br />
  contents: <br /><textarea name="contents" rows="20" cols="80" class="form-control"><%=@board.contents%></textarea><br />
  <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>" />
  <input type="submit" value="submit" class="btn btn-warning"/>
</form>
